{
  "type": "origins:multiple",
  "name": "Hot Streak",
  "description": "Core charges up twice as fast\nUse [Fire Charge] To obtain this upgrade!",
  "core_build_up": {
    "type": "origins:action_on_hit",
    "bientity_action": {
      "type": "origins:actor_action",
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "resource": "*:core_core_bar"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_hot_streak"
    }
  },
  "hot_streak": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "streak_upgrade": {
    "type": "origins:active_self",
    "key": "key.use",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:*_hot_streak",
          "change": 1
        },
        {
          "type": "origins:execute_command",
          "command": "clear @s minecraft:fire_charge 1"
        },
        {
          "type": "origins:execute_command",
          "command": "title @p actionbar {\"bold\":true,\"color\":\"gold\",\"text\":\"Hot Streak Unlocked!\"}"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
              "item": "minecraft:fire_charge"
            }
          }
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_hot_streak"
        }
      ]
    }
  }
}
