{
  "type": "origins:multiple",
  "name": "Flame Core",
  "description": "Creates a large, slow traveling ground bound wave of fire that deals 5 hearts of damage",
  "core_bar": {
    "type": "origins:resource",
    "max": 100,
    "min": 1,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 15
    }
  },
  "core_active": {
    "type": "origins:active_self",
    "key": {
      "key": "key.loadToolbarActivator"
    },
    "cooldown": 0,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function scorch:armor_stands"
        },
        {
          "type": "origins:execute_command",
          "command": "tag @s add initiated"
        },
        {
          "type": "origins:delay",
          "ticks": 51,
          "action": {
            "type": "origins:execute_command",
            "command": "tag @s remove initiated"
          }
        },
        {
          "type": "origins:delay",
          "ticks": 2,
          "action": {
            "type": "origins:change_resource",
            "change": 0,
            "operation": "set",
            "resource": "*:*_core_bar"
          }
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 100,
      "comparison": "==",
      "resource": "*:*_core_bar"
    }
  },
  "particles": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function scorch:armor_stands_particles"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 100,
      "comparison": "==",
      "resource": "*:*_core_bar"
    }
  },
  "core_build_up": {
    "type": "origins:action_on_hit",
    "bientity_action": {
      "type": "origins:actor_action",
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "resource": "*:core_core_bar"
      }
    }
  },
  "grant_counter": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:counter_counter",
          "change": 1,
          "operation": "add"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 30,
          "comparison": "==",
          "resource": "*:*_core_bar"
        },
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "!=",
          "resource": "*:counter_counter"
        }
      ]
    }
  }
}
