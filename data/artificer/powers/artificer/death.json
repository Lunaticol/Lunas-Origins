{
  "type": "origins:multiple",
  "name": "Final Act",
  "description": "You explode upon death",
  "death": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:explode",
          "create_fire": false,
          "damage_self": true,
          "destruction_type": "none",
          "power": 4
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:explosion_emitter ~ ~ ~ 1 1 1 1 10 force"
        },
        {
          "type": "origins:delay",
          "ticks": 5,
          "action": {
            "type": "origins:change_resource",
            "change": 1,
            "operation": "set",
            "resource": "*:*_explode_stop"
          }
        },
        {
          "type": "origins:execute_command",
          "command": "playsound minecraft:entity.generic.explode master @s ~ ~ ~ 100 1"
        },
        {
          "type": "moborigins:damage_equipment",
          "equipment_slot": "head",
          "amount": 50
        },
        {
          "type": "moborigins:damage_equipment",
          "equipment_slot": "chest",
          "amount": 50
        },
        {
          "type": "moborigins:damage_equipment",
          "equipment_slot": "legs",
          "amount": 50
        },
        {
          "type": "moborigins:damage_equipment",
          "equipment_slot": "feet",
          "amount": 50
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:health",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_explode_stop"
        }
      ]
    }
  },
  "explode_stop": {
    "type": "origins:resource",
    "max": 1,
    "min": 0,
    "hud_render": { "should_render": false }
  },
  "death_warning": {
    "type": "origins:action_over_time",
    "interval": 2,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:smoke ~ ~ ~ 1 1 1 .1 20 force"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:lava ~ ~ ~ 1 1 1 1 1 force"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:health",
          "comparison": "<=",
          "compare_to": 4
        }
      ]
    }
  }
}
