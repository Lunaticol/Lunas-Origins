{
  "name": "Staticized",
  "description": "being an electric dragon, you build up a static charge over time. Be careful as overcharging can hurt.",
  "type": "origins:multiple",
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/info.png",
      "text": "Overcharge can cause you to take damage in water. Using abilitys like lightning breath can dispell overcharge"
    }
  ],
  "static_bar": {
    "type": "origins:resource",
    "max": 1000,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "bar_index": 3,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png"
    }
  },
  "static_charging": {
    "type": "origins:action_over_time",
    "interval": 40,
    "entity_action": {
      "type": "origins:if_else_list",
      "actions": [
        {
          "action": {
            "type": "origins:change_resource",
            "change": 4,
            "operation": "add",
            "resource": "*:*_static_bar"
          },
          "condition": {
            "type": "origins:predicate",
            "predicate": "luna:is_thundering",
            "inverted": true
          }
        },
        {
          "action": {
            "type": "origins:change_resource",
            "change": 8,
            "operation": "add",
            "resource": "*:*_static_bar"
          },
          "condition": {
            "type": "origins:predicate",
            "predicate": "luna:is_thundering"
          }
        }
      ]
    }
  },
  "over_charge": {
    "type": "origins:resource",
    "max": 100,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "bar_index": 2,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "condition": {
        "type": "origins:resource",
        "compare_to": 1000,
        "comparison": ">=",
        "resource": "*:*_static_bar"
      }
    }
  },
  "static_over_charging": {
    "type": "origins:action_over_time",
    "interval": 100,
    "entity_action": {
      "type": "origins:if_else_list",
      "actions": [
        {
          "action": {
            "type": "origins:change_resource",
            "change": 1,
            "operation": "add",
            "resource": "*:*_over_charge"
          },
          "condition": {
            "type": "origins:predicate",
            "predicate": "luna:is_thundering",
            "inverted": true
          }
        },
        {
          "action": {
            "type": "origins:change_resource",
            "change": 2,
            "operation": "add",
            "resource": "*:*_over_charge"
          },
          "condition": {
            "type": "origins:predicate",
            "predicate": "luna:is_thundering"
          }
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1000,
      "comparison": ">=",
      "resource": "*:*_static_bar"
    }
  },
  "over_charged": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:apply_effect",
      "effects": [
        {
          "duration": 40,
          "effect": "slowness",
          "amplifier": 1,
          "show_particles": false,
          "show_icon": true
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": ">=",
      "resource": "luna:stormscale/static_charge_over_charge"
    }
  },
  "over_charged_in_water": {
    "type": "origins:damage_over_time",
    "interval": 20,
    "onset_delay": 0,
    "damage": 2,
    "damage_easy": 1,
    "damage_source": {
      "name": "hurt_by_water",
      "unblockable": true,
      "bypasses_armor": true
    },
    "protection_enchantment": "origins:water_protection",
    "protection_effectiveness": 1,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": ">",
          "compare_to": 0.5
        },
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": ">=",
          "resource": "luna:stormscale/static_charge_over_charge"
        }
      ]
    }
  },
  "reset_over_charge": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:change_resource",
      "change": -1,
      "operation": "set",
      "resource": "*:*_over_charge"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 999,
      "comparison": "<",
      "resource": "*:*_static_bar"
    }
  }
}
