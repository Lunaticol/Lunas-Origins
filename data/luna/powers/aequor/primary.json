{
  "name": "Freezing Slashes",
  "description": "Your next few performed attacks will freeze the target, slowing and blinding them.",
  "type": "origins:multiple",
  "ws": {
    "type": "origins:action_on_hit",
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": ">",
      "resource": "*:aequor/primary_resource"
    },
    "bientity_action": {
      "type": "origins:target_action",
      "action": {
        "type": "origins:grant_power",
        "power": "luna:aequor/freeze",
        "source": "aq"
      }
    }
  },
  "resource": { "type": "origins:resource", "min": 0, "max": 3 },
  "drain": {
    "type": "origins:action_on_hit",
    "bientity_action": {
      "type": "origins:actor_action",
      "action": {
        "type": "origins:change_resource",
        "resource": "*:aequor/primary_resource",
        "operation": "add",
        "change": -1
      }
    },
    "cooldown": 10
  },
  "active": {
    "type": "origins:active_self",
    "key": "key.origins.primary_active",
    "cooldown": 400,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:aequor/primary_resource",
          "operation": "add",
          "change": 3
        },
        {
          "type": "origins:change_resource",
          "resource": "*:aequor/water_water",
          "operation": "add",
          "change": -200
        }
      ]
    }
  }
}
