{
  "name": "Sculk Veil",
  "description": "Your outer catalyst's shell hardens, absorbing more damage the angrier you are.\nThis disables your regen.",
  "type": "origins:multiple",
  "anger": {
    "type": "origins:resource",
    "max": 10,
    "min": 0
  },
  "anger_rise": {
    "type": "origins:self_action_when_hit",
    "entity_action": {
      "type": "origins:chance",
      "chance": 0.25,
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "operation": "add",
        "resource": "*:*_anger"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:sculk/switching_switch_resource"
    }
  },
  "veil_1": {
