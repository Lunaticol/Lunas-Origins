      "type": "origins:chance",
      "chance": 0.1,
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "operation": "add",
        "resource": "*:*_anger"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:sculk/switching_switch_resource"
    }
  },
