{
  "name": "Sculk Veil",
  "description": "Your outer catalyst's shell hardens, absorbing more damage the angrier you are.",
  "type": "origins:multiple",
  "anger": {
    "type": "origins:resource",
    "max": 8,
    "min": 0
  },
  "anger_rise": {
    "type": "origins:self_action_when_hit",
