{
  "name": "Water dependant",
  "description": "Like all plants, you need water to survive. However, unlike other plants, too much water can negatively impact you.",
  "type": "origins:multiple",
  "water": {
    "type": "origins:resource",
    "max": 1000,
    "min": 0,
    "hud_render": {
      "bar_index": 1
    }
  },
  "ooooooooooooooough_im_so_thirsty": {
    "type": "origins:action_over_time",
    "interval": 1200,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "change": -100,
          "resource": "*:*_water"
        }
      ]
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:fluid_height",
          "compare_to": 0.01,
          "comparison": ">=",
          "fluid": "minecraft:water",
          "inverted": true
        },
        {
          "type": "origins:submerged_in",
          "fluid": "minecraft:water",
          "inverted": true
        },
        {
          "type": "origins:in_block",
          "block_condition": {
            "type": "origins:block_state",
            "property": "level",
            "compare_to": 1,
            "comparison": ">="
          },
          "inverted": true
        }
      ]
    }
  },
  "water_gain": {
    "type": "origins:action_over_time",
    "interval": 100,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "change": 100,
          "resource": "*:*_water",
          "operation": "add"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:fluid_height",
              "compare_to": 0.01,
              "comparison": ">=",
              "fluid": "minecraft:water"
            },
            {
              "type": "origins:in_block",
              "block_condition": {
                "type": "origins:block_state",
                "property": "level",
                "compare_to": 1,
                "comparison": ">="
              }
            }
          ]
        },
        {
          "type": "origins:submerged_in",
          "fluid": "minecraft:water",
          "inverted": true
        }
      ]
    }
  },
  "out_of_water": {
    "type": "origins:damage_over_time",
    "damage": 2,
    "damage_source": {
      "bypasses_armor": true,
      "out_of_world": true,
      "unblockable": true,
      "fire": true,
      "magic": true,
      "name": "no_water_for_gills"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_water"
        },
        {
          "type": "origins:fluid_height",
          "compare_to": 0,
          "fluid": "minecraft:water",
          "comparison": ">",
          "inverted": true
        }
      ]
    }
  }
}
