{
  "name": "Soul Energy",
  "description": "Using the energy of souls, you are able to amplify your abilities.",
  "type": "origins:multiple",
  "soul_bar": {
    "type": "origins:resource",
    "min": 0,
    "max": 1000,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/luna_resource_bar.png",
      "bar_index": 2
    }
  },
  "fill_bar_up": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 20,
      "operation": "add",
      "resource": "*:*_soul_bar"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:on_block",
          "block_condition": {
            "type": "origins:in_tag",
            "tag": "luna:kitsune/nether/blocks"
          }
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_flame_bar"
        }
      ]
    }
  },
  "drain_bar": {
    "type": "origins:action_over_time",
    "interval": 40,
    "entity_action": {
      "type": "origins:change_resource",
      "change": -50,
      "operation": "add",
      "resource": "*:*_soul_bar"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:on_block",
          "block_condition": {
            "type": "origins:in_tag",
            "tag": "luna:kitsune/nether/blocks",
            "inverted": true
          }
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_flame_bar"
        }
      ]
    }
  },
  "soul_activate": {
    "type": "origins:active_self",
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 15
    },
    "key": {
      "key": "key.saveToolbarActivator",
      "continuous": false
    },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "change": 1,
          "operation": "add",
          "resource": "*:*_flame_bar"
        },
        {
          "type": "origins:change_resource",
          "resource": "luna:kitsune/power_active_soul_mode",
          "change": 1,
          "operation": "set"
        },
        {
          "type": "origins:execute_command",
          "command": "playsound minecraft:block.sculk_shrieker.shriek master @s ~ ~ ~ 100 2"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:soul ~ ~0.5 ~ 1 0 1 0.05 10 force"
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1000,
      "comparison": "==",
      "resource": "*:*_soul_bar"
    }
  },
  "active_drain": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:change_resource",
      "change": -20,
      "operation": "add",
      "resource": "*:*_soul_bar"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_flame_bar"
    }
  },
  "soul_reset": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:change_resource",
      "change": -1,
      "operation": "add",
      "resource": "*:*_flame_bar"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:*_soul_bar"
    }
  },
  "flame_bar": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": { "should_render": false }
  },
  "soul_siphon": {
    "type": "origins:self_action_on_hit",
    "cooldown": 0,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 50,
      "operation": "add",
      "resource": "*:*_soul_bar"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:*_flame_bar"
    }
  },
  "pa_reset": {
    "type": "origins:action_over_time",
    "interval": 300,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 0,
      "operation": "set",
      "resource": "luna:kitsune/power_active_soul_mode"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "resource": "luna:kitsune/power_active_soul_mode",
      "comparison": "=="
    }
  },
  "active_soul": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:apply_effect",
          "effects": [
            {
              "effect": "minecraft:speed",
              "duration": 40,
              "amplifier": 1,
              "show_particles": false,
              "show_icon": true
            },
            {
              "effect": "minecraft:strength",
              "duration": 40,
              "amplifier": 1,
              "show_particles": false,
              "show_icon": true
            }
          ]
        },
        {
          "type": "origins:change_resource",
          "resource": "luna:kitsune/dash_dashes",
          "operation": "set",
          "change": 7
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_flame_bar"
    }
  },
  "speed": {
    "type": "origins:conditioned_attribute",
    "modifier": {
      "value": 0.1,
      "attribute": "minecraft:generic.attack_speed",
      "operation": "addition"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_flame_bar"
    }
  },
  "no_elytra": {
    "type": "origins:conditioned_restrict_armor",
    "chest": {
      "type": "origins:ingredient",
      "ingredient": {
        "item": "minecraft:elytra"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_flame_bar"
    }
  }
}
