{
  "name": "Thermal Shield",
  "description": "Create a shield of fire infront of you, dealing damage to anyone who walks into it.",
  "type": "origins:multiple",
  "thermal_shield": {
    "type": "origins:active_self",
    "key": {
      "key": "key.origins.secondary_active",
      "continuous": true
    },
    "hud_render": { "should_render": false },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function luna:scorch/shield"
        },
        {
          "type": "origins:change_resource",
          "change": -2,
          "operation": "add",
          "resource": "*:*_flame_fuel"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": ">=",
          "resource": "*:*_flame_fuel"
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_lock"
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:*_inferno_shield"
        }
      ]
    }
  },
  "flame_fuel": {
    "type": "origins:resource",
    "max": 100,
    "min": 0,
    "start_value": 100,
    "hud_render": {
      "should_render": true,
      "bar_index": 7,
      "sprite_location": "origins:textures/gui/resource_bar.png"
    }
  },
  "inferno_shield": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "thermal_shield_kit": {
    "type": "origins:active_self",
    "key": {
      "key": "key.origins.secondary_active",
      "continuous": true
    },
    "hud_render": { "should_render": false },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function luna:scorch/shield"
        },
        {
          "type": "origins:change_resource",
          "change": -1,
          "operation": "add",
          "resource": "*:*_flame_fuel"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": ">=",
          "resource": "*:*_flame_fuel"
        },
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "==",
          "resource": "*:*_inferno_shield"
        }
      ]
    }
  },
  "recharge": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 1,
      "operation": "add",
      "resource": "*:*_flame_fuel"
    }
  },
  "lock": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "lock_shield": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:delay",
      "ticks": 20,
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "operation": "set",
        "resource": "*:*_lock"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 10,
      "comparison": "<=",
      "resource": "*:*_flame_fuel"
    }
  },
  "unlock_shield": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 0,
      "operation": "set",
      "resource": "*:*_lock"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 11,
      "comparison": ">=",
      "resource": "*:*_flame_fuel"
    }
  }
}
