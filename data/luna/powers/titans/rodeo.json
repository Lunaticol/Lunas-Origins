{
  "type": "origins:multiple",
  "steal_battery": {
    "type": "origins:active_self",
    "key": "key.use",
    "cooldown": 100,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:riding_action",
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:damage",
                "amount": 10,
                "source": {
                  "bypasses_armor": true,
                  "out_of_world": true,
                  "name": "rodeo"
                }
              },
              {
                "type": "origins:execute_command",
                "command": "particle minecraft:lava ~ ~ ~ 1 1 1 1 5 force"
              },
              {
                "type": "origins:play_sound",
                "sound": "minecraft:entity.generic.explode",
                "pitch": 1,
                "volume": 1,
                "category": "players"
              }
            ]
          }
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_took_battery",
          "change": 1
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_ready"
    }
  },
  "message": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "title @p actionbar {\"text\":\"Right Click to steal battery!\",\"color\":\"dark_red\",\"bold\":true}"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_ready"
    }
  },
  "remove": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:revoke_power",
          "power": "luna:titans/rodeo",
          "source": "luna:titans/ronin/ronin"
        },
        {
          "type": "origins:revoke_power",
          "power": "luna:rodeo",
          "source": "titans:titans/scorch/scorch"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_ready",
          "change": 0
        },
        {
          "type": "origins:dismount"
        },
        {
          "type": "origins:delay",
          "ticks": 1,
          "action": {
            "type": "origins:add_velocity",
            "y": 0.5,
            "space": "world"
          }
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_took_battery"
    }
  },
  "charge_up_time": {
    "type": "origins:action_over_time",
    "interval": 100,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_ready",
      "change": 1
    }
  },
  "ready": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "took_battery": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "failsafe": {
    "type": "origins:action_over_time",
    "interval": 300,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:revoke_power",
          "power": "luna:titans/rodeo",
          "source": "luna:titans/ronin/ronin"
        },
        {
          "type": "origins:revoke_power",
          "power": "luna:titans/rodeo",
          "source": "luna:titans/scorch/scorch"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_ready",
          "change": 0
        },
        {
          "type": "origins:dismount"
        }
      ]
    }
  }
}
