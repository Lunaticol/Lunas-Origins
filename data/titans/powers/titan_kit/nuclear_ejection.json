{
  "hidden": true,
  "type": "origins:multiple",
  "name": "Nuclear Ejection",
  "description": "At your reactor level, you can unleash a violent explosion while ejecting.",
  "death": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:apply_effect",
          "effects": [
            {
              "duration": -1,
              "amplifier": 10,
              "effect": "minecraft:slowness"
            },
            {
              "duration": -1,
              "amplifier": 10,
              "effect": "minecraft:weakness"
            }
          ]
        },
        {
          "type": "origins:execute_command",
          "command": "particle flash ~ ~ ~ 0 0 0 1 25 normal"
        },
        {
          "type": "origins:change_resource",
          "change": 1,
          "operation": "set",
          "resource": "*:*_nuclear"
        },
        {
          "type": "origins:delay",
          "ticks": 60,
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:explode",
                "create_fire": false,
                "damage_self": true,
                "destruction_type": "none",
                "power": 6
              },
              {
                "type": "origins:execute_command",
                "command": "particle minecraft:explosion_emitter ~ ~ ~ 1 1 1 1 10 force"
              },
              {
                "type": "origins:delay",
                "ticks": 2,
                "action": {
                  "type": "origins:and",
                  "actions": [
                    {
                      "type": "origins:change_resource",
                      "change": 0,
                      "operation": "set",
                      "resource": "*:*_execute"
                    },
                    {
                      "type": "origins:change_resource",
                      "change": 0,
                      "operation": "set",
                      "resource": "*:*_nuclear"
                    }
                  ]
                }
              },
              {
                "type": "origins:execute_command",
                "command": "playsound minecraft:entity.generic.explode master @s ~ ~ ~ 100 1"
              }
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:health",
          "compare_to": 20,
          "comparison": "<="
        },
        {
          "type": "origins:resource",
          "compare_to": 3,
          "comparison": "==",
          "resource": "*:*_execute"
        }
      ]
    }
  },
  "nuclear": {
    "type": "origins:resource",
    "max": 1,
    "min": 0,
    "hud_render": { "should_render": false }
  },
  "execute": {
    "type": "origins:resource",
    "max": 3,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "condition": {
        "type": "origins:resource",
        "compare_to": 1,
        "comparison": ">=",
        "resource": "*:*_execute"
      }
    }
  },
  "activate": {
    "type": "origins:active_self",
    "key": "key.origins.ternary_active",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_execute",
      "change": 1
    }
  },
  "execute_drain": {
    "type": "origins:action_over_time",
    "interval": 40,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_execute",
      "change": -3
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:*_nuclear"
    }
  },
  "activate_nuclear_blast_now": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "title @p actionbar {\"bold\":true,\"color\":\"dark_red\",\"text\":\"Execute Nuclear Blast Now!! (Tenrary x3)\"}"
    },
    "condition": {
      "type": "origins:health",
      "compare_to": 20,
      "comparison": "<="
    }
  }
}
