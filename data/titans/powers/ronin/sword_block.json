{
  "name": "Sword Block",
  "description": "Reduces damage taken by 70%, 85% during sword core. Can be held indefinitely.",
  "type": "origins:multiple",
  "block": {
    "type": "origins:active_self",
    "key": { "key": "key.use", "continuous": true },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "change": 1,
          "operation": "set",
          "resource": "*:*_block_resource"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:crit ~ ~ ~ 0.5 1.5 0.5 0 100 force"
        }
      ]
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "mainhand",
      "item_condition": {
        "type": "origins:ingredient",
        "ingredient": { "tag": "titans:sword" }
      }
    }
  },
  "block_resource": { "type": "origins:resource", "max": 1, "min": 0 },
  "actual_block": {
    "type": "origins:modify_damage_taken",
    "modifier": {
      "operation": "multiply_total",
      "value": -0.7
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "==",
          "resource": "*:*_block_resource"
        },
        {
          "type": "origins:resource",
          "compare_to": 0,
          "comparison": "==",
          "resource": "*:ronin/core_core_active"
        }
      ]
    }
  },
  "reset": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:change_resource",
      "change": 0,
      "operation": "set",
      "resource": "*:*_block_resource"
    }
  },
  "actual_block_core": {
    "type": "origins:modify_damage_taken",
    "modifier": {
      "operation": "multiply_total",
      "value": -0.85
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "==",
          "resource": "*:*_block_resource"
        },
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "==",
          "resource": "*:ronin/core_core_active"
        }
      ]
    }
  },
  "slow": {
    "type": "origins:conditioned_attribute",
    "modifier": {
      "operation": "addition",
      "attribute": "minecraft:generic.movement_speed",
      "value": -0.075
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_block_resource"
    }
  },
  "sprint": {
    "type": "origins:prevent_sprinting",
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_block_resource"
    }
  }
}
