{
  "name": "RTP (Random Teleport)",
  "description": "You sometimes teleport when hit. \nProjectiles cannot harm you.",
  "type": "origins:multiple",
  "hit": {
    "type": "origins:modify_damage_taken",
    "cooldown": 0,
    "self_action": {
      "type": "origins:if_else_list",
      "actions": [
        {
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:play_sound",
                "sound": "minecraft:item.chorus_fruit.teleport",
                "volume": 1,
                "pitch": 1
              },
              {
                "type": "origins:execute_command",
                "command": "spreadplayers ~ ~ 8 16 under 127 false @s"
              },
              {
                "type": "origins:execute_command",
                "command": "particle minecraft:portal ~ ~0.4 ~ 0.3 0.6 0.3 0 100 normal"
              },
              {
                "type": "origins:change_resource",
                "resource": "*:*_rtp_hit_bar",
                "change": 0,
                "operation": "set"
              }
            ]
          },
          "condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:on_block",
                "block_condition": {
                  "type": "origins:height",
                  "compare_to": 60,
                  "comparison": ">="
                }
              },
              {
                "type": "origins:dimension",
                "dimension": "minecraft:the_nether"
              }
            ]
          }
        },
        {
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:play_sound",
                "sound": "minecraft:item.chorus_fruit.teleport",
                "volume": 1,
                "pitch": 1
              },
              {
                "type": "origins:execute_command",
                "command": "spreadplayers ~ ~ 8 16 under 60 false @s"
              },
              {
                "type": "origins:execute_command",
                "command": "particle minecraft:portal ~ ~0.4 ~ 0.3 0.6 0.3 0 100 normal"
              },
              {
                "type": "origins:change_resource",
                "resource": "*:*_rtp_hit_bar",
                "change": 0,
                "operation": "set"
              }
            ]
          },
          "condition": {
            "type": "origins:on_block",
            "block_condition": {
              "type": "origins:height",
              "compare_to": 59,
              "comparison": "<="
            }
          }
        }
      ]
    },
    "modifier": {
      "operation": "multiply_total",
      "value": -1
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "compare_to": 1,
          "comparison": "==",
          "resource": "*:*_rtp_hit_bar"
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "offhand",
          "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
              "item": "minecraft:stone_button"
            }
          }
        }
      ]
    }
  },
  "evade_projectiles": {
    "type": "proviorigins:evade_projectiles",
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function sf:ender/rtp_end"
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "offhand",
      "item_condition": {
        "type": "origins:ingredient",
        "ingredient": {
          "item": "minecraft:stone_button"
        }
      }
    }
  },
  "rtp_hit_bar": {
    "type": "origins:resource",
    "max": 1,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "bar_index": 6
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "offhand",
      "item_condition": {
        "type": "origins:ingredient",
        "ingredient": {
          "item": "minecraft:stone_button"
        }
      }
    }
  },
  "rtp_hit": {
    "type": "origins:action_when_damage_taken",
    "cooldown": 0,
    "entity_action": {
      "type": "origins:chance",
      "chance": 0.4,
      "action": {
        "type": "origins:change_resource",
        "resource": "*:*_rtp_hit_bar",
        "change": 1,
        "operation": "set"
      }
    },
    "condition": {
      "type": "origins:equipped_item",
      "equipment_slot": "offhand",
      "item_condition": {
        "type": "origins:ingredient",
        "ingredient": {
          "item": "minecraft:stone_button"
        }
      }
    }
  }
}
