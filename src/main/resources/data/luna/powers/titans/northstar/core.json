{
  "type": "origins:multiple",
  "name": "Flight Core",
  "description": "Hover up above the enemy before unleashing rockets at targets below.",
  "core_bar": {
    "type": "origins:resource",
    "max": 100,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "bar_index": 4
    }
  },
  "acitvate_core": {
    "type": "origins:active_self",
    "key": "key.loadToolbarActivator",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "change": 1,
          "resource": "*:*_core_active"
        },
        {
          "type": "origins:apply_effect",
          "effect": {
            "effect": "minecraft:levitation",
            "duration": 110,
            "amplifier": 1
          }
        },
        {
          "type": "origins:delay",
          "ticks": 100,
          "action": {
            "type": "origins:change_resource",
            "change": 1,
            "operation": "set",
            "resource": "*:*_core_hover_active"
          }
        },
        {
          "type": "origins:delay",
          "ticks": 200,
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:change_resource",
                "change": 0,
                "operation": "set",
                "resource": "*:*_core_active"
              },
              {
                "type": "origins:change_resource",
                "change": 0,
                "operation": "set",
                "resource": "*:*_core_hover_active"
              },
              {
                "type": "origins:change_resource",
                "change": 0,
                "operation": "set",
                "resource": "*:*_core_bar"
              }
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 100,
      "comparison": "==",
      "resource": "*:*_core_bar"
    }
  },
  "core_active": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "core_hover_active": {
    "type": "origins:resource",
    "max": 1,
    "min": 0
  },
  "core_hover": {
    "type": "apugli:hover",
    "step_assist": 8,
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_core_hover_active"
    }
  },
  "missle": {
    "type": "origins:fire_projectile",
    "key": {
      "continuous": true,
      "key": "key.use"
    },
    "cooldown": 5,
    "entity_type": "minecraft:armor_stand",
    "tag": "{Silent:1b,Invisible:1b}",
    "speed": 2,
    "projectile_action": {
      "type": "origins:grant_power",
      "power": "luna:titans/northstar/core_armorstand",
      "source": "luna:titans/northstar/core"
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 1,
      "comparison": "==",
      "resource": "*:*_core_active"
    }
  },
  "core_build_up": {
    "type": "origins:action_on_hit",
    "bientity_action": {
      "type": "origins:actor_action",
      "action": {
        "type": "origins:change_resource",
        "change": 1,
        "resource": "*:*_core_bar"
      }
    },
    "condition": {
      "type": "origins:resource",
      "compare_to": 0,
      "comparison": "==",
      "resource": "*:*_core_active"
    }
  }
}
